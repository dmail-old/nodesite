function sendPage(){
	this.request.fileSystem.readdir(global.CLIENT_PATH + '/' + this.request.url.pathname, function(error, files){			
		if( error ){
			return this.error(error);
		}

		this.page.createTemplate().send({
			files: JSON.stringify(files)
		});

	}.bind(this));
}

module.exports = {
	GET: sendPage,
	POST: sendPage
};
